<div class="pt-20 bg-green-100 min-h-screen !importan">
  <% content_for(:title, t('profiles.edit.title')) %>
  <div class="container mx-auto p-4 max-w-4xl">
    <h1 class="text-2xl font-bold mb-6"><%= t('profiles.edit.title') %></h1>
    <%= form_with model: @user, url: profile_path, local: true, class: "space-y-6" do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-control">
        <%= f.label :name, t('profiles.edit.name'), class: "label" %>
        <%= f.text_field :name, class: "input input-bordered bg-white" %>
      </div>

      <div class="form-control">
        <%= f.label :email, t('profiles.edit.email'), class: "label" %>
        <%= f.email_field :email, class: "input input-bordered bg-white" %>
      </div>

      <div class="form-control">
        <%= f.label :goal, t('profiles.edit.goal'), class: "label" %>
        <%= f.select :goal, User.goals.keys.map { |goal| [t("enums.user.goal.#{goal}"), goal] }, {}, class: "select select-bordered bg-white w-full" %>
      </div>

      <div class="form-control">
        <%= f.label :age, t('profiles.edit.age'), class: "label" %>
        <%= f.number_field :age, class: "input input-bordered bg-white" %>
      </div>

      <div class="form-control">
        <%= f.label :weight, t('profiles.edit.weight'), class: "label" %>
        <%= f.number_field :weight, class: "input input-bordered bg-white" %>
      </div>

      <div class="form-control">
        <%= f.label :target_weight, t('profiles.edit.target_weight'), class: "label" %>
        <%= f.number_field :target_weight, class: "input input-bordered bg-white" %>
      </div>

      <div class="form-control">
        <%= f.label :activity_level, t('profiles.edit.activity_level'), class: "label" %>
        <%= f.select :activity_level, [['低い', 'low'], ['適度', 'moderate'], ['高い', 'high']], {}, class: "select select-bordered bg-white w-full" %>
      </div>

      <div class="form-control">
        <%= f.label :avatar, t('profiles.edit.avatar'), class: "label" %>
        <%= f.file_field :avatar, data: {controller: "image-preview", image_preview_target: "preview"} %>
        <div class="mt-3">
          <%= image_tag @user.avatar.url, class: 'w-24 h-24 rounded-full' if @user.avatar? %>
        </div>
      </div>

      <div class="text-center">
        <%= f.submit t('profiles.edit.save'), class: 'btn bg-sky-300 hover:bg-sky-400 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
      </div>
    <% end %>
  </div>
</div>
