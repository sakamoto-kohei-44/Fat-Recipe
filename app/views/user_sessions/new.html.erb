<div class="flex items-center justify-center min-h-screen bg-gray-200">
  <div class="px-8 py-12 mx-4 text-left bg-white shadow-md rounded-lg md:w-1/3 lg:w-1/4">
    <h1 class="text-3xl font-semibold text-center text-gray-700"><%= t('user_sessions.new.title') %></h1>
    <%= form_with url: login_path, local: true, data: { turbo: false } do |f| %>
      <div class="mt-6">
        <%= f.label :email, t('user_sessions.new.email_label'), class: "block text-lg font-medium text-gray-600" %>
        <%= f.email_field :email, autofocus: true, class: "block w-full px-4 py-3 mt-2 bg-gray-100 border rounded-md focus:border-sky-500 focus:ring-sky-300 focus:outline-none focus:ring focus:ring-opacity-50" %>
      </div>
      <div class="mt-6">
        <%= f.label :password, t('user_sessions.new.password_label'), class: "block text-lg font-medium text-gray-600" %>
        <%= f.password_field :password,  placeholder: "6文字以上", class: "block w-full px-4 py-3 mt-2 bg-gray-100 border rounded-md focus:border-sky-500 focus:ring-sky-300 focus:outline-none focus:ring focus:ring-opacity-50" %>
      </div>
      <div class="flex items-center justify-center mt-8">
        <%= f.submit t('user_sessions.new.login_button'), class: "px-6 py-3 text-lg text-white bg-cyan-400 rounded-lg hover:bg-cyan-500 focus:outline-none focus:bg-sky-700 w-full" %>
      </div>
    <% end %>
    <div class="mt-8 text-center text-gray-600">
      <%= link_to t('user_sessions.new.register_link'), new_user_path, class: "text-sky-600 hover:underline" %>
      <%= link_to t('user_sessions.new.password_forget'), new_password_reset_path, class: "ml-4 text-sky-600 hover:underline" %>
      <p class="mt-4">
        <%= link_to t('user_sessions.new.forget'), body_info_users_path, class: "text-sky-600 hover:underline" %>
      </p>
    </div>
  </div>
</div>
