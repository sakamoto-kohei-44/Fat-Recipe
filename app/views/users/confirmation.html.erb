<div class="bg-green-100 min-h-screen p-4">
  <div class="max-w-md mx-auto">
    <ul class="steps steps-primary py-4">
      <li class="step step-primary "><%= t('confirmation.steps.goal') %></li>
      <li class="step step-primary"><%= t('confirmation.steps.profile') %></li>
      <li class="step step-primary"><%= t('confirmation.steps.weight') %></li>
      <li class="step step-primary"><%= t('confirmation.steps.activity') %></li>
      <li class="step step-primary"><%= t('confirmation.steps.allergies') %></li>
      <li class="step step-primary"><%= t('confirmation.steps.confirmation') %></li>
    </ul>
    <div class="bg-white p-8 rounded-lg shadow-md">
      <div class="flex flex-col items-center">
        <h2 class="text-lg font-medium mb-4"><%= t('confirmation.title') %></h2>
        <p class="font-medium"><%= t('confirmation.goal') %> <%= t("body_info.#{@goal}") %></p>
        <p class="font-medium"><%= t('confirmation.gender') %> <%= t("activerecord.attributes.gender.#{@gender_key}") %></p>
        <p class="font-medium"><%= t('confirmation.age') %> <%= @age %>æ­³</p>
        <p class="font-medium"><%= t('confirmation.height') %> <%= @height %>cm</p>
        <p class="font-medium"><%= t('confirmation.weight') %> <%= @weight %>kg</p>
        <p class="font-medium"><%= t('confirmation.target_weight') %> <%= @target_weight %>kg</p>
        <p class="font-medium"><%= t('confirmation.activity_level') %> <%= t("activity_level.options.#{@activity_level_key}") %></p>
        <p class="font-medium"><%= t('confirmation.allergies') %> <%= @allergy_names %></p>
        <div class="flex justify-center space-x-4">
          <%= link_to body_info_users_path, class: "btn btn-primary flex items-center space-x-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
            </svg>
          <% end %>
          <%= link_to dashboard_home_path, class: "btn btn-success btn-outline flex items-center space-x-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>