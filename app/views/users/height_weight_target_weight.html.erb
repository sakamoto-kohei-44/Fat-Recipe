<div class="choice-container">
    <h1>体重管理</h1>
    <%= form_with url: save_height_weight_target_weight_users_path, local: true do |f| %>
        <div class="input-container">
            <%= f.label :height, "身長は？" %>
            <%= f.text_field :height, placeholder: "cm" %>
        </div>
        <div class="input-container">
            <%= f.label :weight, "体重は？" %>
            <%= f.text_field :weight, placeholder: "kg" %>
        </div>
        <div class="input-container">
            <%= f.label :target_weight, "目標体重は？" %>
            <%= f.text_field :target_weight, placeholder: "kg" %>
        </div>
        <%= f.submit '次へ', class: "btn btn-light" %>
    <% end %>
</div>
