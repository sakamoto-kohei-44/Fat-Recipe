<div class="bg-teal-100 min-h-screen">
  <div class="absolute top-16 left-0 right-0 w-full animate-float1">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 640">
      <path fill="#5eead4" fill-opacity="1" d="M0,192L48,197.3C96,203,192,213,288,224C384,235,480,245,576,218.7C672,192,768,128,864,122.7C960,117,1056,171,1152,192C1248,213,1344,203,1392,197.3L1440,192L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path>
    </svg>
  </div>
  <div class="absolute top-18 left-0 right-0 w-full animate-float2">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
      <path fill="#5eead4" fill-opacity="0.5" d="M0,256L34.3,245.3C68.6,235,137,213,206,197.3C274.3,181,343,171,411,170.7C480,171,549,181,617,197.3C685.7,213,754,235,823,229.3C891.4,224,960,192,1029,181.3C1097.1,171,1166,181,1234,170.7C1302.9,160,1371,128,1406,112L1440,96L1440,0L1405.7,0C1371.4,0,1303,0,1234,0C1165.7,0,1097,0,1029,0C960,0,891,0,823,0C754.3,0,686,0,617,0C548.6,0,480,0,411,0C342.9,0,274,0,206,0C137.1,0,69,0,34,0L0,0Z"></path>
    </svg>
  </div>
  <div class="max-w-lg mx-auto p-6 relative z-10">
    <ul class="steps steps-primary font-zenmaru">
      <li class="step step-primary"><%= t('allergies.steps.goal') %></li>
      <li class="step step-primary"><%= t('allergies.steps.profile') %></li>
      <li class="step step-primary"><%= t('allergies.steps.weight') %></li>
      <li class="step step-primary"><%= t('allergies.steps.activity') %></li>
      <li class="step step-primary"><%= t('allergies.steps.allergies') %></li>
      <li class="step"><%= t('allergies.steps.confirmation') %></li>
    </ul>
    <h1 class="text-2xl font-bold text-gray-800 text-center font-zenmaru mb-6"><%= t('allergies.title') %></h1>
    <%= form_with model: @user, url: save_allergies_users_path, local: true, data: { turbo: false } do |f| %>
      <div class="bg-white rounded-lg p-6 shadow-md relative z-10">
        <div>
          <%= f.label :allergy_item_ids, t('allergies.label'), class: "text-gray-700 font-zenmaru text-lg" %>
        </div>
        <div class="space-y-2 mt-2">
          <%= f.collection_check_boxes :allergy_item_ids, AllergyItem.all, :id, :name do |b| %>
            <label class="flex items-center">
              <%= b.check_box(class: "h-5 w-5 text-indigo-600 rounded focus:ring-indigo-500") %>
              <span class="ml-2 text-gray-700 font-zenmaru"><%= b.text %></span>
            </label>
          <% end %>
        </div>
        <div class="text-center mt-8">
          <%= f.submit t('allergies.confirm_button'), class: "btn btn-primary font-zenmaru bg-cyan-300 w-full" %>
        </div>
      </div>
    <% end %>
  </div>
</div>