<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="px-8 py-12 mx-4 text-left bg-white shadow-md rounded-lg md:w-1/3 lg:w-1/4">
    <h1 class="text-3xl font-semibold text-center text-gray-700"><%= t('users.new.title') %></h1>
    <%= form_with model: @user, local: true, data: { turbo: false } do |f| %>
      <div class="mt-6">
        <%= f.label :name, t('users.new.name_label'), class: "label" %>
        <%= f.text_field :name, class: "input input-bordered bg-gray-100 w-full" %>
      </div>
      <div class="mt-6">
        <%= f.label :email, t('users.new.email_label'), class: "label" %>
        <%= f.email_field :email, autofocus: true, class: "input input-bordered bg-gray-100 w-full" %>
      </div>
      <div class="mt-6">
        <%= f.label :password, t('users.new.password_label'), class: "label" %>
        <%= f.password_field :password, class: "input input-bordered bg-gray-100 w-full" %>
      </div>
      <div class="mt-6">
        <%= f.label :password_confirmation, t('users.new.password_confirmation_label'), class: "label" %>
        <%= f.password_field :password_confirmation, class: "input input-bordered bg-gray-100 w-full" %>
      </div>
      <div class="text-center mt-8">
        <%= f.submit t('users.new.register_button'), class: "px-6 py-3 text-lg text-white bg-cyan-400 rounded-lg hover:bg-cyan-500 focus:outline-none focus:bg-sky-700 w-full" %>
      </div>
    <% end %>
    <div class="mt-8 text-center text-gray-600">
      <%= link_to t('users.new.login_link'), login_path, class: "text-sky-600 hover:underline" %>
    </div>
  </div>
</div>
